                @Html.DisplayFor(modelItem => item.ListingsMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListingsMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceMax)
            </td>
