@model IEnumerable<SteamBoat.Models.Mission>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingsMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingsMax)
            </th>
